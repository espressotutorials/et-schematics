{
  "name": "@espressotutorialsgmbh/et-schematics",
  "version": "0.0.1",
  "description": "Some custom angular schematics for Espresso Tutorials prjects.",
  "scripts": {
    "build": "ng-packagr -p ng-package.json && npm run build:schematics && npm run copy:schematics",
    "build:schematics": "tsc -p tsconfig.json --outDir ./dist",
    "copy:schematics": "cpr src dist --overwrite --deleteFirst",
    "dev": "tsc -p tsconfig.json -w",
    "test": "npm run build && jasmine src/**/*.test.js",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it"
  },
  "keywords": [
    "schematics"
  ],
  "author": "info@fabianbentz.de",
  "license": "MIT",
  "schematics": "./schematics/collection.json",
  "ngPackage": {
    "dest": "dist",
    "lib": {
      "entryFile": "src/public_api.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espressotutorials/et-schematics.git"
  },
  "bugs": {
    "url": "https://github.com/espressotutorials/et-schematics/issues"
  },
  "ng-add": {
    "save": false
  },
  "devDependencies": {
    "@angular-devkit/core": "^16.2.0",
    "@angular-devkit/schematics": "^16.2.0",
    "@angular/cdk": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/compiler-cli": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@schematics/angular": "^16.2.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^16.11.7",
    "jasmine": "^4.0.0",
    "ng-packagr": "^16.2.0",
    "release-it": "^16.1.5",
    "typescript": "~5.1.3"
  },
  "release-it": {
    "github": {
      "release": true
    }
  }
}
